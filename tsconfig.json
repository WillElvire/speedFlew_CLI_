{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "outDir": "dist",
    "paths": {
      "src/*": ["src/*"],
    },
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2017"
  },
  "include": ["src/**/*"]
}