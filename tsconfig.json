{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*"],
}